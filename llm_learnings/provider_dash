  <script>
    // sample dynamic values
    document.getElementById('levelProgress').style.width = '68%';
    document.getElementById('pointsVal').innerText = '12,480';
    document.getElementById('streakDays').innerText = '6';

    // visit circle percentage (stroke-dashoffset math)
    const pct = 68;
    const circumference = 2 * Math.PI * 36; // r=36
    const offset = circumference * (1 - pct/100);
    document.getElementById('visitCircle').style.strokeDasharray = circumference;
    document.getElementById('visitCircle').style.strokeDashoffset = offset;
    document.getElementById('visitPct').innerText = pct + '%';
    document.getElementById('visitPct').style.transition = 'all .6s ease';

    // inject badges
    const badges = [
      {title:'Distance Champion', sub:'100+ miles this week', color:'#4fb3ff',emoji:'ðŸš—'},
      {title:'Patient Advocate', sub:'5-star streak', color:'#39d29a',emoji:'ðŸ’™'},
      {title:'Early Bird', sub:'First visit before 8 AM', color:'#ffd166',emoji:'ðŸŒ…'},
      {title:'Complete Assessor', sub:'100% doc rate', color:'#c1e7ff',emoji:'ðŸ“'},
    ];
    const badgeContainer = document.getElementById('recentBadges');
    const achList = document.getElementById('achList');

    badges.forEach(b=>{
      const el = document.createElement('div');
      el.className = 'ach-badge';
      el.style.background = b.color;
      el.title = b.title + ' â€¢ ' + b.sub;
      el.innerHTML = `<div style="font-size:20px">${b.emoji}</div>`;
      badgeContainer.appendChild(el);

      // add to achievements
      const a = document.createElement('div');
      a.style.display='flex'; a.style.gap='8px'; a.style.alignItems='center';
      a.innerHTML = `<div class="ach-badge" style="background:${b.color}">${b.emoji}</div><div><div style="font-weight:700">${b.title}</div><div class="small muted">${b.sub}</div></div>`;
      achList.appendChild(a);
    });

    // Chart.js charts
    const outcomesCtx = document.getElementById('outcomesChart').getContext('2d');
    new Chart(outcomesCtx, {
      type:'line',
      data:{
        labels:['6w ago','5w','4w','3w','2w','Last week','This week'],
        datasets:[{
          label:'Health Outcome Score',
          data:[68,70,72,74,76,78,80],
          fill:true,
          tension:0.36,
          borderWidth:2,
          borderColor:'#1aa3b7',
          backgroundColor:'rgba(26,163,183,0.12)',
          pointRadius:3
        }]
      },
      options:{
        plugins:{legend:{display:false}},
        scales:{y:{beginAtZero:false}}
      }
    });

    const insCtx = document.getElementById('insChart').getContext('2d');
    new Chart(insCtx, {
      type:'pie',
      data:{
        labels:['Medicare','Medicaid','Private'],
        datasets:[{data:[48,30,22],backgroundColor:['#1aa3b7','#22b573','#ffd166']}]
      },
      options:{plugins:{legend:{position:'bottom'}}}
    });

    const ageCtx = document.getElementById('ageChart').getContext('2d');
    new Chart(ageCtx,{
      type:'bar',
      data:{
        labels:['18-44','45-64','65-74','75-84','85+'],
        datasets:[{label:'Patients', data:[12,28,60,78,70], borderRadius:6, backgroundColor:'#c1e7ff'}]
      },
      options:{plugins:{legend:{display:false}}, scales:{y:{beginAtZero:true}}}
    });

    // small accessibility: keyboard focus style
    document.querySelectorAll('.card').forEach(c=>c.setAttribute('tabindex','0'));

  </script>
</body>
</html>
